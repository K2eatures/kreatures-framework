<asml-script name="abstractSwarm">
    <operation type="BeliefsUpdate">
        <param name="information" value="$perception" />
        <param name="beliefs" value="$beliefs" />
	<output>beliefs</output>
    </operation>
     
	<operation type="GeneratesOptions">
	    <param name="perception" value="$perception" />
	    <output>numberOfOption</output>
	</operation>
	
	<assign name="running" value="TRUE" />
	<while condition="$running==TRUE">
		
		<operation type="IntentionsUpdate">
		    <param name="plan" value="$plan" />
	    	<output>action</output>
		</operation>
		  
		<conditional>
			<if condition="$action==null">
			 	<operation type="SubgoalsGeneration">
			 	    <param name="plan" value="$plan" />
			 	    <output>running</output>
			 	</operation>
			</if> 
			<else>
			    <assign name="running" value="FALSE" />
			</else>
		</conditional>
	</while>
	
	<execute action="$action" />
</asml-script>
